



<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="flex center justify-between top-div">
 <%= image_tag('https://cdn-user-icons.flaticon.com/73194/73194478/1701994675372.svg?token=exp=1701995992~hmac=17e8fe82c3a9f8ae325353fac6ab74ea', alt: 'Example Image', class:'back-icon') %>
  <h2 class="white btn-primary">REGISTER</h2>
  <div class="actions ">
    <%= f.submit "Next", class: "next-btn white btn-primary" %>
  </div>
  </div>
  <div class="white-bck">
<div class="field full-width">

    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-field fuller-width", placeholder:"Full Name"%>
  </div>
  <div class="field full-width">

    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-field fuller-width", placeholder:"Email"%>
  </div>

  <div class="field full-width">
    <%= f.password_field :password, autocomplete: "new-password", class:"form-field fuller-width", placeholder:"Password (6 characters minimum)" %>
    
  </div>

  <div class="field full-width">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  class:"form-field fuller-width", placeholder:"Confirm Password"%>
  </div>
</div>
  
<% end %>

<%= render "devise/shared/links" %>
