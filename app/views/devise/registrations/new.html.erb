



<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="flex">
  <h2>Sign up</h2>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  </div>
<div class="field full-width">

    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-field", placeholder:"Full Name"%>
  </div>
  <div class="field full-width">

    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-field", placeholder:"Email"%>
  </div>

  <div class="field full-width">
    <%= f.password_field :password, autocomplete: "new-password", class:"form-field", placeholder:"Password (6 characters minimum)" %>
    
  </div>

  <div class="field full-width">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  class:"form-field", placeholder:"Confirm Password"%>
  </div>

  
<% end %>

<%= render "devise/shared/links" %>
