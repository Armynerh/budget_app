<!-- app/views/budget_transactions/new.html.erb -->
<h1>Add a New Transaction for <%= @category.name %></h1>

<%= form_with(model: [@category, @budget_transaction], local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount %>
    <%= form.text_field :amount %>
  </div>

  <!-- Remove any field related to category_id here -->

  <div>
    <%= form.submit 'Save Transaction' %>
  </div>
<% end %>

<%= link_to 'Back', category_budget_transactions_path(@category) %>
